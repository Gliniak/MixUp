<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="90dp"
                android:layout_height="46dp"
                android:ems="10"
                android:text="Name: "
                android:textSize="25sp" />
<!--
            <TextView
                android:id="@+id/tv2"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:ems="10"
                android:text="Describtion:"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />
-->
            <TextView
                android:id="@+id/tv3"
                android:layout_width="70dp"
                android:layout_height="46dp"
                android:ems="10"
                android:text="Artist:"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:ems="10"
                android:text="Price: "
                android:textSize="25sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:ems="10"
                android:text="Song: "
                android:textSize="25sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:ems="10"
                android:text="Genre: "
                android:textSize="25sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:ems="10"
                android:text="Album: "
                android:textSize="25sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <Button
                android:id="@+id/add_song_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Finish" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"/>
<!--
            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"/>
-->
            <EditText
                android:id="@+id/etArtist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/choose_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Choose song" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:entries="@array/spinnerGenres" />

            <EditText
                android:id="@+id/etAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"/>

            <Button
                android:id="@+id/upload_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upload song" />

        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>